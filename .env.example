# Django Settings
# ===============

# Set to 'production' for production environment
DJANGO_ENV=development

# Secret key - generate a new one for production
SECRET_KEY=django-insecure-generate-a-secure-key-here

# Allowed hosts (comma-separated list)
ALLOWED_HOSTS=localhost,127.0.0.1

# Debug mode (True/False)
DEBUG=True

# Database Configuration
# =====================

# SQLite (Development)
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=db.sqlite3

# PostgreSQL (Production)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=smartkuku
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Email Configuration
# ==================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend  # For development
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend  # For production
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=noreply@example.com

# Frontend URL (for password reset links, etc.)
FRONTEND_URL=http://localhost:3000

# Celery Configuration
# ===================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS Settings
# =============
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# AWS S3 Configuration (for file uploads in production)
# ===================================================
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# AWS_DEFAULT_ACL=private

# JWT Settings
# ============
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_LIFETIME=3600  # 1 hour
JWT_REFRESH_TOKEN_LIFETIME=86400  # 24 hours
